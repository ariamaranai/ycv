{
  "manifest_version": 3,
  "name": "ycv",
  "version": "0",
  "description": "Youtube comments viewer",
  "icons": {
    "128": "128.png"
  },
  "permissions": [
    "alarms",
    "contentSettings",
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "system.display",
    "userScripts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "0",
      "path": "0.json",
      "enabled": true
    }]
  },
  "web_accessible_resources": [{
    "resources": ["*"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "bg.js"
  },
  "content_scripts": [{
    "css": ["main.css"],
    "matches": ["https://www.youtube.com/watch?app=desktop&hl=de&persist_hl=1&v=*"],
    "run_at": "document_start"
  }],
  "action": {}
}